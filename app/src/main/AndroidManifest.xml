        <activity android:name="org.spinsuite.view.TV_Base" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
        <activity android:name="org.spinsuite.view.TV_DynamicActivity" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
        <activity android:name="org.spinsuite.view.LV_Search" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
        <activity android:name="org.spinsuite.view.V_Process" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
